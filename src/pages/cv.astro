---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CV | David X. Wu">
  <article class="cv-page">
    <h1>Curriculum Vitae</h1>
    <a href="/pdf/CV.pdf" class="download" target="_blank">
      <i class="fas fa-file-pdf"></i>
      Download CV (PDF)
    </a>
  </article>
</Layout>

<style>
  .cv-page {
    text-align: center;
    padding: 3rem 0;
  }

  h1 {
    margin-top: 0;
    margin-bottom: 2rem;
  }

  .download {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 1.5rem;
    background: var(--text);
    color: var(--bg);
    border-radius: 4px;
    font-size: 0.95rem;
    transition: background 0.15s;
  }

  .download:hover {
    background: var(--accent);
    color: white;
  }
</style>

