---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "David X. Wu",
  description = "PhD student at UC Berkeley researching LLM reasoning, RL, and theoretical computer science."
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,500;0,600;1,400&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/jpswalsh/academicons@1/css/academicons.min.css">
</head>
<body>
  <div class="container">
    <header>
      <nav>
        <a href="/" class="site-title">David X. Wu</a>
        <div class="nav-links">
          <a href="/" class:list={[{ active: currentPath === '/' }]}>About</a>
          <a href="/publications" class:list={[{ active: currentPath === '/publications' || currentPath === '/publications/' }]}>Research</a>
          <a href="/notes" class:list={[{ active: currentPath === '/notes' || currentPath === '/notes/' }]}>Notes</a>
          <a href="/cv" class:list={[{ active: currentPath === '/cv' || currentPath === '/cv/' }]}>CV</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="social-links">
        <a href="https://github.com/davidxwu" target="_blank" rel="noopener" aria-label="GitHub">
          <i class="fab fa-github"></i>
        </a>
        <a href="https://twitter.com/dragie34" target="_blank" rel="noopener" aria-label="Twitter">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://linkedin.com/in/david-wu-168879153" target="_blank" rel="noopener" aria-label="LinkedIn">
          <i class="fab fa-linkedin"></i>
        </a>
        <a href="https://scholar.google.com/citations?user=GbtCyIUAAAAJ" target="_blank" rel="noopener" aria-label="Google Scholar">
          <i class="ai ai-google-scholar"></i>
        </a>
      </div>
      <p class="copyright">&copy; {new Date().getFullYear()} David Wu</p>
    </footer>
  </div>
</body>
</html>

<style is:global>
  :root {
    --bg: #faf9f7;
    --text: #1a1a1a;
    --text-muted: #555;
    --accent: #8b4049;
    --accent-hover: #6d323a;
    --border: #e0ddd8;
    
    --font-serif: 'Crimson Pro', Georgia, serif;
    --font-mono: 'IBM Plex Mono', Consolas, monospace;
    
    --max-width: 680px;
  }

  *, *::before, *::after {
    box-sizing: border-box;
  }

  html {
    font-size: 19px;
  }

  body {
    margin: 0;
    font-family: var(--font-serif);
    font-size: 1rem;
    line-height: 1.65;
    color: var(--text);
    background: var(--bg);
    -webkit-font-smoothing: antialiased;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  h1, h2, h3 {
    font-weight: 500;
    line-height: 1.3;
    margin: 2rem 0 1rem;
    letter-spacing: -0.01em;
  }

  h1 { font-size: 1.75rem; }
  h2 { font-size: 1.25rem; color: var(--text-muted); font-weight: 400; }
  h3 { font-size: 1.1rem; }

  p { margin: 0 0 1.25rem; }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.15s;
  }

  a:hover {
    color: var(--accent-hover);
  }

  header {
    padding: 2.5rem 0 2rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 2.5rem;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .site-title {
    font-size: 1.05rem;
    font-weight: 500;
    color: var(--text);
    letter-spacing: 0.01em;
  }

  .site-title:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    font-size: 0.95rem;
    color: var(--text-muted);
    position: relative;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--text);
  }

  .nav-links a.active::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--text);
  }

  main {
    flex: 1;
  }

  footer {
    margin-top: auto;
    padding: 2.5rem 0;
    border-top: 1px solid var(--border);
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .social-links a {
    color: var(--text-muted);
    font-size: 1.15rem;
  }

  .social-links a:hover {
    color: var(--accent);
  }

  .copyright {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
  }

  @media (max-width: 540px) {
    html { font-size: 17px; }
    
    nav {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>

